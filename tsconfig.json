{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": true,
    "lib": [
      "dom",
      "es2017",
      "esnext.asynciterable"
    ],
    "types": [
      "@types/node",
      "reflect-metadata"
    ]
  }
}